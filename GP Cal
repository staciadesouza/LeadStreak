  <script>
        let currentRevenue = 0;

        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount);
        }

        function formatPercentage(percentage) {
            return Math.round(percentage) + '%';
        }

        function getMarginInterpretation(margin) {
            if (margin >= 50) {
                return "Excellent! This is a very healthy gross profit margin indicating strong pricing power and efficient cost management.";
            } else if (margin >= 30) {
                return "Good gross profit margin. Your business has solid profitability with room for operational expenses.";
            } else if (margin >= 15) {
                return "Moderate gross profit margin. Consider reviewing pricing strategy or reducing costs to improve profitability.";
            } else if (margin >= 5) {
                return "Low gross profit margin. This leaves little room for operational expenses and may indicate pricing or cost issues.";
            } else {
                return "Very low gross profit margin. Immediate attention needed to pricing strategy and cost management.";
            }
        }

        function updateCalculations() {
            if (currentRevenue <= 0) return;

            const cogsPercentage = parseFloat(document.getElementById('cogs-slider').value);
            const cogs = (currentRevenue * cogsPercentage) / 100;
            const grossProfit = currentRevenue - cogs;
            const grossMargin = (grossProfit / currentRevenue) * 100;

            // Update visual bar
            const cogsBar = document.getElementById('cogs-bar');
            const profitBar = document.getElementById('profit-bar');
            
            cogsBar.style.width = cogsPercentage + '%';
            profitBar.style.width = (100 - cogsPercentage) + '%';

            // Update bar labels
            if (cogsPercentage > 15) {
                document.getElementById('cogs-label-bar').textContent = 'COS';
            } else {
                document.getElementById('cogs-label-bar').textContent = '';
            }

            if ((100 - cogsPercentage) > 15) {
                document.getElementById('profit-label-bar').textContent = 'Gross Profit';
            } else {
                document.getElementById('profit-label-bar').textContent = '';
            }

            // Update current values
            document.getElementById('current-cogs').textContent = formatCurrency(cogs);
            document.getElementById('current-profit').textContent = formatCurrency(grossProfit);
            document.getElementById('cogs-percentage').textContent = formatPercentage(cogsPercentage);
            document.getElementById('profit-percentage').textContent = formatPercentage(100 - cogsPercentage);

            // Update results section
            document.getElementById('gross-margin').textContent = formatPercentage(grossMargin);
            document.getElementById('explanation-text').textContent = getMarginInterpretation(grossMargin);
            
            document.getElementById('results').classList.remove('hidden');
            document.getElementById('results').classList.add('result-animation');
        }

        function handleRevenueInput() {
            const revenueInput = document.getElementById('revenue');
            const sliderSection = document.getElementById('slider-section');
            const revenue = parseFloat(revenueInput.value);

            if (revenue > 0) {
                currentRevenue = revenue;
                document.getElementById('revenue-display').textContent = formatCurrency(revenue);
                sliderSection.classList.remove('hidden');
                updateCalculations();
            } else {
                currentRevenue = 0;
                sliderSection.classList.add('hidden');
                document.getElementById('results').classList.add('hidden');
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('revenue').addEventListener('input', handleRevenueInput);
            document.getElementById('cogs-slider').addEventListener('input', updateCalculations);
        });
    </script>
